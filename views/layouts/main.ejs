<!DOCTYPE html>
<html lang="en">
<head>
        <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= club.name %></title>
    <link href="/css/member-portal.css" rel="stylesheet">        
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="header-content">
            <div class="logo">
                ğŸ“Š ClubDirector
                <% if (club.logo_url) { %>
                    <img src="<%= club.logo_url %>" alt="<%= club.name %>" style="height: 40px; margin-left: 10px;">
                <% } %>
            </div>
            <div class="club-info">
                <div class="club-name"><%= club.name %></div>
                <div class="portal-label">Member Portal</div>
            </div>
            <div class="user-info">
                <% if (user) { %>
                    <div class="user-name">
                        <%= user.first_name %> <%= user.last_name %>
                    </div>
                    <a href="/logout" class="btn-logout">Logout</a>
                <% } else { %>
                    <a href="/auth/login" class="btn-logout">Login</a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Sidebar Navigation -->
    <% if (user) { %>
    <div class="sidebar">
        <div class="nav-item <%= currentPage === 'dashboard' ? 'active' : '' %>">
            <a href="/dashboard">
                ğŸ“Š Dashboard
            </a>
        </div>
        <div class="nav-item <%= currentPage === 'checkin' ? 'active' : '' %>">
            <a href="/checkin">
                âœ… Check-in
            </a>
        </div>
        <div class="nav-item <%= currentPage === 'profile' ? 'active' : '' %>">
            <a href="/profile">
                ğŸ‘¤ My Profile
            </a>
        </div>
        <% if (user.household_id) { %>
        <div class="nav-item">
            <a href="/profile#family">
                ğŸ‘¨â€ğŸ‘©â€ğŸ‘§â€ğŸ‘¦ Family
            </a>
        </div>
        <% } %>
        <div class="nav-item">
            <a href="/history">
                ğŸ“ˆ Training History
            </a>
        </div>
    </div>
    <% } %>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <!-- Flash Messages -->
            <% if (typeof messages !== 'undefined') { %>
                <% if (messages.success && messages.success.length > 0) { %>
                    <% messages.success.forEach(function(message) { %>
                        <div class="alert alert-success"><%= message %></div>
                    <% }); %>
                <% } %>

                <% if (messages.error && messages.error.length > 0) { %>
                    <% messages.error.forEach(function(message) { %>
                        <div class="alert alert-error"><%= message %></div>
                    <% }); %>
                <% } %>
            <% } %>

            <%- body %>
        </div>
    </div>

    <script>
        // Auto-hide alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.style.opacity = '0';
                    setTimeout(() => alert.remove(), 300);
                }, 5000);
            });
        });

        function showAlert(message, type = 'info') {
            const alertClass = type === 'error' ? 'alert-error' : `alert-${type}`;
            const alertHtml = `
                <div class="alert ${alertClass}">
                    ${message}
                </div>
            `;
            
            const container = document.querySelector('.container');
            if (container) {
                container.insertAdjacentHTML('afterbegin', alertHtml);
            }
        }
    </script>
</body>
</html>